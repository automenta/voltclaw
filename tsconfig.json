{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "voltclaw": ["src/index.ts"],
      "@voltclaw/nostr": ["src/nostr/index.ts"],
      "@voltclaw/llm": ["src/llm/index.ts"],
      "@voltclaw/memory": ["src/memory/index.ts"],
      "@voltclaw/tools": ["src/tools/index.ts"],
      "@voltclaw/testing": ["src/testing/index.ts"],
      "@voltclaw/cli": ["src/cli/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "examples"]
}
